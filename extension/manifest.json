{
  "manifest_version": 3,
  "name": "Shopanion",
  "version": "1.0.0",
  "description": "AI Shopping Companion v0.2 - Virtual try-on for any shopping site",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:8001/*",
    "http://localhost:8002/*",
    "https://*/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "src/scripts/background-service.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/env-loader.js", "src/scripts/vton_gemini.js", "config.js", "src/scripts/content-injector.js"],
      "css": ["src/styles/content-injector.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "src/pages/extension-popup.html",
    "default_title": "Shopanion - AI Try-On"
  },

  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "assets/images/*",
        "assets/data/*",
        "src/*",
        "src/pages/*",
        "src/scripts/*",
        "src/styles/*",
        "../.env"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
